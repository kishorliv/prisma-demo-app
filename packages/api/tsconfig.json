{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./build",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "build",
    "__tests__",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
